@model Covid_Cases_Tracking_System.Models.CovidCases

@{
    ViewBag.Title = "Create";
}

<h2>Add New Cases</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                Name
                @Html.DropDownList("PersonID", null, htmlAttributes: new { @class = "form-control", @disable="disable" })
                @Html.ValidationMessageFor(model => model.PersonID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                Status
                @Html.DropDownList("CovidStatusID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CovidStatusID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                Date Acquired
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @type ="date"} })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               @Html.ActionLink("Back to List", "Index",null, new { @class="btn btn-dark"}) <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


