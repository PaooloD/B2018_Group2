@model IEnumerable<Covid_Cases_Tracking_System.Models.Person>

@{
    Layout = "~/Views/Shared/_1Layout.cshtml";
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActiveCases</title>
</head>
<body>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2>Covid Cases Information</h2>
                            <br />
                            @Html.ActionLink(" Add New Person", "Create", null, new { @class = "btn btn-primary far fa-plus-square" })
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <table id="example4" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Status
                                        </th>
                                        <th>
                                            Date Acquired
                                        </th>

                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Lastname) @Html.DisplayFor(modelItem => item.Suffix), @Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Middlename)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CovidCases.FirstOrDefault().CovidStatus.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CovidCases.FirstOrDefault().Date)
                                            </td>
                                            <td>
                                                @Html.ActionLink(linkText: "Add New Cases", actionName: "Create", controllerName: "CovidCases", routeValues: new { id = item.PersonID }, htmlAttributes: null) |
                                                @Html.ActionLink("Details", "Details", new { id = item.PersonID }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
                                            
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->


</body>
</html>
